                height: 25px;
                line-height: 25px;
            }

            .cardform > .form-control {
                box-shadow: none;
                border-radius: 0;
                height: 50px;
                background: #F8F8F8;
                width: 480px;
                border-color: #e5e5e5;
            }

             .cardform >div> label {
                font-size: 15px;
                margin-bottom: 5px;
                font-weight:bold;
                color: #333;
                display: block;
            }
            .cardform >div> .form-control {
                box-shadow: none;
                border-radius: 0;
                height: 50px;
                background: #F8F8F8;
                border-color: #e5e5e5;
            }

        .select-yhk {
            list-style: none;
            padding-left: 0;
            margin-bottom: 20px;
        }

            .select-yhk li {
                width: 55px;
                height: 34px;
                border: 1px solid #E5E5E5;
                float: left;
                margin-right: 10px;
                overflow: hidden;
                border-radius: 3px;
                cursor: pointer;
            }

                .select-yhk li > img {
                    display: block;
                    margin-left: -1px;
                    margin-top: -1px;
                    opacity: 0.6;
                }

                .select-yhk li.active {
                    border-color: #08A9E3;
                }

                .select-yhk li img {
                    -webkit-filter: grayscale(1); /* Webkit */
                    filter: gray; /* IE6-9 */
                    filter: grayscale(1); /* W3C */
                }

                .select-yhk li.active img {
                    opacity: 1;
                    -webkit-filter: initial; /* Webkit */
                    filter: initial; /* IE6-9 */
                    filter: initial; /* W3C */
                }

        .cardform > select {
            color: #999;
        }

        .dates {
            margin-bottom: 20px;
        }

            .dates > label > span {
                float: right;
                width: 120px;
            }

            .dates > .form-control {
                width: 130px;
                float: left;
            }

            .dates > span {
                float: left;
                height: 50px;
                line-height: 50px;
                margin: 0 10px;
            }

        .btn-submit {
            width: 210px;
            height: 36px;
            line-height: 32px;
            background: #08A9E3;
            color: #fff;
            font-size: 15px;
            font-weight: bold;
            border-radius: 36px;
            text-align: center;
            display: inline-block!important;
            border: 1px solid #08A9E3;
            margin-top: 48px;
            margin-bottom: 200px;
            outline: none;
        }

        .rig-img {
            border-left: 1px solid #e5e5e5;
            height: 320px;
            padding-top: 150px;
            padding-left: 100px;
        }

        .rig-img > img {
            display: block;
        }

        #changePaymentMethod{
            width: 100px;
            height: 50px;
            line-height: 50px;
            display: inline-block;
            text-align: center;
            color: #575757;
            text-decoration: none;
            background-color: #f4f4f4;
            border: 1px solid #c1c1c1;
            margin-left: 8px;
        }

        @@media (min-width: 992px){
            .col-md-4 {
                width: 272px;
            }

            .col-md-7 {
                width: 78%;
            }
        }

        .modal-dialog{
            margin: 250px auto;
            text-align: center;
            width: 500px;
        }

         @@media (min-width: 940px){
            .stand-tab{
                width: 600px;
            }
        }

        .popover{
             max-width: 300px;
        }

        .rig-img .customer-tips{
            display: block;
            width: 230px;
            text-align: center;
            padding-top: 7px;
            text-decoration: none!important;
        }
        .tips{
            text-decoration: none!important;
            padding-left: 10px;
        }

        </style>

}
