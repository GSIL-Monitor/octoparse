<script>
        var bread2 = document.querySelector('.breadcrumb li:nth-child(2)') ? document.querySelector('.breadcrumb li:nth-child(2)').innerText : '';
        var bread3 = document.querySelector('.breadcrumb li:nth-child(3)') ? document.querySelector('.breadcrumb li:nth-child(3)').innerText : '';
        var list = document.querySelectorAll('.left .wrap ul li a');
        var format = function (val) {
            return val.replace(/-/g, ' ').toLowerCase()
        }
        for (let i = 0; i <= list.length; i++) {
            if (bread2 && list[i] && format(list[i].innerText) === format(bread2)) {
                list[i].style.color = '#2A96EF'
            } else if (bread3 && list[i] && format(list[i].innerText) === format(bread3)) {
                list[i].style.color = '#2A96EF'
            }
        }
        document.querySelectorAll('.left .wrap ul .topHeader span').forEach(function(e){
            e.onclick = function(){
                if(e.parentNode.parentNode.style.height !=='40px') {
                    e.parentNode.parentNode.style.height = '40px';
                    e.style.transform = 'rotate(-90deg)';
                    e.style.top = '46px';
                    e.style.left = '-14px';
                } else {
                    e.parentNode.parentNode.style.height = 'unset';
                    e.style.transform = 'rotate(90deg)';
                    e.style.top = '-5px';
                    e.style.left = '26px';
                }
            }
        })
</script>