@inherits UmbracoTemplatePage
@{
    if (Request.RawUrl.ToLower().Contains("tutorial-7"))
    {
        ViewBag.IsSeven = true;
    }
    else
    {
        ViewBag.IsSeven = false;
    }
}
<style>
    .tut-content .left {
        width: 260px;
        float: left;
        margin-right: 60px;
    }

    .tut-content .left .search {
        width: 260px;
        height: 46px;
        position: relative;
        margin-bottom: 20px;
        border:0;
    }
    .tut-content .left form {
        height: 100%;
        width: 100%;
        position: relative;
    }
    .tut-content .left form span{
        position: absolute;
        right: 20px;
    }

    .tut-content .left .search input {
        background: #ffffff;
        border: 1px solid #e1e1e1;
        width: 100%;
        height: 100%;
        padding-right: 36px;
        text-indent: 10px;
        box-sizing: border-box;
    }

    .tut-content .left .search img {
        position: absolute;
        right: 16px;
        top: 8px;
    }

    .tut-content .left .wrap {
        width: 260px;
    }

    .tut-content .left .wrap ul {
        width: 260px;
        list-style: none;
        overflow: hidden;
    }

    .tut-content .left .wrap ul li {
        width: 260px;
        height: 40px;
        line-height: 40px;
        font-size: 15px;
        color: #333333;
        text-indent: 20px;
    }

    .tut-content .left .wrap ul li a {
        cursor: pointer;
        width: 260px;
        height: 40px;
        line-height: 40px;
        font-size: 16px;
        color: #333333;
        text-indent: 20px;
    }

    .tut-content .left .wrap ul li.topHeader {
        color: #333333;
        font-weight: bold;
        position: relative;
    }
    .tut-content .left .wrap ul li.topHeader a{
        color: #333333;
        font-size: 18px;
        font-weight: bold;
        position: relative;
    }

    .tut-content .left .wrap ul li.topHeader span {
        transform: rotate(90deg);
        position: absolute;
        height: 0;
        width: 0;
        top: -7px;
        font-size: 19px;
        left: 26px;
        cursor:pointer;
        transform-origin: center center;
        user-select: none;
    }
    .tut-content .left .wrap ul li.topHeader span:hover {
        color:#2A96EF
    }
</style>
