@using Octoparse.Web.Models;
@{
    Layout = "octLayout.cshtml";
    if(User.Identity.IsAuthenticated){
        string zendeskUrl = null;
        var user = Membership.GetUser();
        var userId = user.ProviderUserKey.ToString();
        if (Octoparse.Web.GlobalCache.GenerateZendeskCallbackUrl(userId, user.UserName, user.Email, out zendeskUrl))
        {
            Response.Redirect(zendeskUrl);
        }
        Response.Redirect("/Profile");
    }
}
@section styles{
	<link href="/css/validation.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/flex.css">
	<style>
        /*login*/
        .login-container{
            width: 649px;
            margin: 0 auto;
            padding-bottom: 80px;
        }
         #UserName,#Password{
          height: 40px;
          border: 2px #AEAEAD   solid;
         }
        .login-container .checkbox label {
            padding: 0;
            line-height: 40px;
            overflow: hidden;
         }
        #RememberMe{
            display: none;
        }
        .checkbox span{
            float: left;
            margin-top: 12px;
            margin-right: 5px;
            width: 14px;
            height: 14px;
            border-radius: 14px;
            border:2px solid  #ccc999;
        }
        .checkbox :checked~span{
		background: #0DA3E2;
	    }
        .login-title{
            font-size: 36px;
            text-align: center;
        }
        .login-create{
            padding: 10px;
            font-size: 20px;
            text-align: center;
        }
        .login-container .p-title{
            text-align: left;
            font-size: 20px;
            color: #333;
            }
        .login-container .p-title span{
            /*color: #ff5050;*/
            padding-left: 2px;
        }
        .login-container .login-box{
            border:#ccc solid 1px;
            border-radius: 10px;
            padding: 30px 120px;
        }
        .login-submit{
                width: 140px;
                height: 40px;
                font-size: 20px;
                color: #FFFFFF;
                display: inline-block;
                margin: calc(-1 * 0px) 0px 0;
                position: relative;
                white-space: nowrap;
                background-color: rgba(13, 163, 226, 1);
                border: solid rgba(96, 94, 94, 1) 0px;
        }
        .login-submit:hover{
            cursor: pointer;
            background: #fff;
            color: #DA2A3C;
            transition: color 0.4s ease 0s;
        }
        .register-a{
            padding-top: 40px;
            text-align: center;
            font-size: 20px;
        }
	</style>
}

<div class="container" style="padding-top: 84px;">
    <div class="login-container">
        <div class="login-title">
            Log in
        </div>
            <div class="login-create">
                <a href="/signup" class="zc">New to Octoparse? Create an account now</a>
            </div>
            <div class="login-box">
            @{
                Html.RenderPartial("~/Views/Account/SignIn.cshtml", new LoginModel());
            }
            </div>
        <div class="register-a">
            <a href="/ForgetPassword">Forgot Password?</a>
        </div>
    </div>
</div>


@section scripts {
    <script src="/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}