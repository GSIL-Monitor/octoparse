@using Octoparse.Web.Models;
@{
	Layout = "octLayout.cshtml";
	if(User.Identity.IsAuthenticated){
		Response.Redirect("/Profile");
	}
}
@section styles{
    <link rel="stylesheet" href="/css/flex.css">
	<link href="/css/validation.css" rel="stylesheet">
	<style>
        #forgetForm {margin-bottom: 100px;}
        .login-title-left {font-size:22px;margin-bottom:20px;}
        .forgot-password-email-send-success {margin:200px auto 100px;}
        .forgot-password-email-send-success p {font-size:22px;text-align:center;margin:30px auto;}
        .forgot-password-email-send-success a {font-size:18px;height:40px;width:200px;}
	</style>
}

@{ Html.RenderPartial("~/Views/Account/ForgetPwd.cshtml", new ForgetPasswordModel()); }

@section scripts {
    <script src="/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}