@using Octoparse.Web.Models;
@{
	Layout = "octLayout.cshtml";
	if (!User.Identity.IsAuthenticated){
        Response.Redirect("/Login?returnUrl=/ChangePassword");
	}
}
@section styles{
	<link href="/css/validation.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/flex.css">
	<style>
        .container {width: 600px;margin: 100px auto;}
        input + .field-validation-error {display: block;padding: 15px;margin-top: 20px;border: 1px solid transparent;border-radius: 4px;color: #a94442;background-color: #f2dede;border-color: #ebccd1;}
        input.btn-regular {width: 200px;height:40px;font-size: 18px;}
	</style>
}

@{ Html.RenderPartial("~/Views/Account/ChangePwd.cshtml", new LocalPasswordModel()); }

@section scripts {
    <script src="/js/jquery.validate.min.js" type="text/javascript"></script>
    <script src="/js/jquery.validate.unobtrusive.min.js" type="text/javascript"></script>
}					